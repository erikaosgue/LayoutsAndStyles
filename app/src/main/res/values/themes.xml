<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Introduction" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/cardview_dark_background</item>
        <item name="colorOnPrimary">@android:color/background_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_error</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@android:color/holo_orange_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


    </style>

    <!-- Customize your theme here. -->
    <style name="CustomTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/green</item>
    </style>


    <!-- Customize your style here. -->
    <style name="CustomStyle">
        <item name="android:textSize">34sp</item>
        <item name="fontFamily">cursive</item>
        <item name="android:textColor">#af16a3</item>
    </style>
</resources>